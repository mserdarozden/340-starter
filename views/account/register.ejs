<% if (title) { %>
<h1 class="form-header"><%= title %></h1>
<% } else { res.redirect('/') } %>

<div class="message-container">
  <% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>
</div>

<div class="form-container">
  <div class="register-container">
    <form id="registerForm" action="/account/register" method="post">
      <label for="firstName">First Name:</label>
      <input
        type="text"
        id="firstName"
        name="firstName"
        required
        value="<%= locals.firstName %>"
      />

      <label for="lastName">Last Name:</label>
      <input
        type="text"
        id="lastName"
        name="lastName"
        required
        value="<%= locals.lastName %>"
      />

      <label for="email">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        value="<%= locals.email %>"
      />

      <label for="password">Password:</label>
      <input
        type="password"
        id="password"
        name="password"
        required
        minlength="12"
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
        title="Password must be at least 12 characters long, contain at least 1 capital letter, 1 number, and 1 special character."
      />
      <p>
        Password must be at least 12 characters and has at least 1 uppercase
        character, 1 number and 1 special character.
      </p>

      <button type="submit">Register</button>
    </form>
  </div>
</div>
