<% if (title) { %>
    <h1 class="form-header"><%= title %></h1>
<% } else {
      res.redirect('/')
} %>

<div class="message-container"><%- messages() %></div>

<div class="form-container">
    <div class="register-container">
        <form action="/account/register" method="post">
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" required />

            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" required />

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required />

            <label for="password">Password:</label>
            <input 
                type="password" 
                id="password" 
                name="password" 
                required 
                minlength="12" 
                pattern="(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*])[A-Za-z\d!@#$%^&*]{12,}" 
                title="Password must be at least 12 characters long, contain at least 1 capital letter, 1 number, and 1 special character."
            />

            <button type="submit">Register</button>
        </form>
    </div>
</div>
<script src="/js/script.js"></script>