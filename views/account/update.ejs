<% if (title) { %>
    <h1 class="form-header"><%= title %></h1>
    <% } else { res.redirect('/') } %>
    
    <div class="message-container">
      <% if (errors && errors.array().length > 0) { %>
      <ul class="notice">
        <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
        <% }) %>
      </ul>
      <% } else { %>
      <div class="notice"><%- messages() %></div>
      <% } %>
    </div>
    
    <div class="form-container">
      <div class="register-container">
        <form id="registerForm" action="/account/update" method="post">
            <label for="first_name">First Name:</label>
            <input
              type="text"
              id="firstName"
              name="first_name"
              required
              value="<%= locals.first_name %>"
            />
      
            <label for="last_name">Last Name:</label>
            <input
              type="text"
              id="lastName"
              name="last_name"
              required
              value="<%= locals.last_name %>"
            />
      
            <label for="account_email">Email:</label>
            <input
              type="email"
              id="email"
              name="account_email"
              required
              value="<%= locals.account_email %>"
            />

          <input type="hidden" name="account_id"
            <% if(locals.account_id) { %> value="<%= locals.account_id %>"
            <% } %>>
    
          <button type="submit">Update Account</button>
        </form>
      </div>
    </div>
    