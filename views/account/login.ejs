<% if (title) { %>
<h1 class="form-header"><%= title %></h1>
<% } else { res.redirect('/') } %>

<div class="message-container">
  <% if (errors && errors.array().length > 0) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } else { %>
  <div class="notice"><%- messages() %></div>
  <% } %>
</div>

<div class="form-container">
  <div class="login-container">
    <form id="loginForm" action="/account/login" method="post">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required value="<%= locals.email %>" />

      <label for="password">Password:</label>
      <input
        type="password"
        id="password"
        name="password"
        required
        minlength="12"
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
        title="Password must be at least 12 characters long, contain at least 1 capital letter, 1 number, and 1 special character."
      />

      <button type="submit">Login</button>
    </form>

    <p>No account? <a href="/account/register">Sign-up</a></p>
  </div>
</div>
