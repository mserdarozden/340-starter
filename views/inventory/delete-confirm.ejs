<% if (title) { %>
    <h1 class="form-header"><%= title %></h1>
    <% } else { res.redirect('/') } %>
    
    <div class="form-container">
      <div class="add-inventory-container">
        <form id="deleteInventoryContainer" action="/inv/delete/" method="post">
          <label for="invMake">Maker:</label>
          <input
            type="text"
            id="invMake"
            name="inv_make"
            required
            readonly
            value="<%= locals.inv_make %>"
          />
          <label for="invModel">Model:</label>
          <input
            type="text"
            id="invModel"
            name="inv_model"
            required
            readonly
            value="<%= locals.inv_model %>"
          />
          <label for="invYear">Year:</label>
          <input
            type="text"
            id="invYear"
            name="inv_year"
            required
            readonly
            value="<%= locals.inv_year %>"
          />
    
          <label for="invPrice">Price:</label>
          <input
            type="text"
            id="invPrice"
            name="inv_price"
            required
            readonly
            value="<%= locals.inv_price %>"
          />
          <input type="hidden" name="inv_id"
          <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
          <% } %>>

          <p>Confirm Deletion - The delete is permanent.</p>
          <button type="submit">Delete Vehicle</button>
          
        </form>
      </div>
    </div>
    